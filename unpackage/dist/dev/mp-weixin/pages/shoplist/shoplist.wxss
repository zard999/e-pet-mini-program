.shoplistContainer {
  height: 100%;
}
.shoplistContainer .search {
  background-color: #fff;
}
.shoplistContainer .search .searchInp {
  height: 80rpx;
  display: flex;
  align-items: center;
  background-color: #f6f6f6;
  margin: 20rpx;
  border-radius: 10rpx;
}
.shoplistContainer .search .searchInp .searchImg {
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx;
}
.shoplistContainer .search .searchInp .inp {
  font-size: 24rpx;
}
.shoplistContainer .header {
  display: flex;
}
.shoplistContainer .header .item {
  width: 25%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom: 1rpx solid #999;
  box-sizing: border-box;
  font-size: 28rpx;
}
.shoplistContainer .header .item.active {
  color: #41c856;
}
.shoplistContainer .shoplist .shopItem {
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #999;
}
.shoplistContainer .shoplist .shopItem .shopImg {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}
.shoplistContainer .shoplist .shopItem .detail {
  width: 100%;
  margin-left: 20rpx;
}
.shoplistContainer .shoplist .shopItem .detail .title {
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2 /* * 多行文本溢出... */;
  overflow: hidden;
}
.shoplistContainer .shoplist .shopItem .detail .price {
  margin-top: 40rpx;
}
.shoplistContainer .shoplist .shopItem .detail .price .priceText {
  color: #ff5757;
  font-size: 28rpx;
}
.shoplistContainer .shoplist .shopItem .detail .price .dprice {
  font-size: 26rpx;
  color: #999;
  margin-left: 30rpx;
}
.shoplistContainer .shoplist .shopItem .detail .sold {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #999;
}
.shoplistContainer .shoplist .shopItem .detail .sold .soldNum {
  margin-left: -100rpx;
}
.shoplistContainer .shoplist .shopItem .detail .sold .toCart {
  width: 60rpx;
  height: 60rpx;
}

